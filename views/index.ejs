<!doctype html>
<html>
<head>
<meta charset="utf-8"><title>3kh0</title>
<link rel="stylesheet" href="/public/style.css">
</head>
<body>
<header><h1>3kh0 Games</h1>
<nav>
<% if(user){ %>
<a href="/logout">Logout (<%=user.username%>)</a>
<% if(user.role==='admin'){ %><a href="/admin">Admin</a><% } %>
<% } else { %><a href="/login">Login</a><% } %>
</nav></header>

<main>
<% if(msg){ %><div class="notice"><%=msg%></div><% } %>
<% if(err){ %><div class="error"><%=err%></div><% } %>
<div class="grid">
<% games.forEach(g => { %>
<div class="card">
<h3><%=g.title%></h3>
<a href="<%=g.proxy%>" target="_blank">Play (via proxy)</a>
</div>
<% }) %>
</div>
</main>
</body>
</html>
